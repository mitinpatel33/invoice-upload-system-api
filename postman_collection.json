{
  "info": {
    "name": "Invoice Upload API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Upload Invoice File",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": "./samples/invoices-valid.csv"
            }
          ]
        },
        "url": {
          "raw": "http://localhost:4000/api/invoices/upload",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api","invoices","upload"]
        }
      },
      "response": []
    }
  ]
}
